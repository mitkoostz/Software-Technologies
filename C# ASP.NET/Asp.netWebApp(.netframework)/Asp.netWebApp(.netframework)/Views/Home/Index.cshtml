@using Asp.netWebApp_.netframework_.Models;
@model List<Task>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <h3>TODO List</h3>
        <ol>
            @foreach (var task in Model)
            {
                <li>@task.Tittle @Html.ActionLink("[Delete]", "Delete", "Task", htmlAttributes: null, 
                               routeValues: new { id = task.Id })</li>
            }
            
        </ol>
        @using (Html.BeginForm("Create", "Task", null, FormMethod.Post, new { @class = "form-inline" }))
        {
            <form>
            <div class="form-group">
                <input type="text" class="form-control"  runat="server" name="Tittle" id="Tittle" placeholder="Task Title" autofocus="autofocus" />
              

            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Add Task" />
                
            </div>
                </form>
        }
    </div>
</div>